{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "types": ["vite/client"],
    "experimentalDecorators": true
  },
  "vueCompilerOptions": {
    "globalTypesPath": "./.vscode/vue-global.d.ts"
  },
  "include": ["src/**/*.js", "src/**/*.vue", "src/**/*.ts"]
}
